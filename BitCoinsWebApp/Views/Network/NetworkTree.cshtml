@model BitCoinsWebApp.Model.UserProfile
@{
    ViewBag.Title = "Network";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}
@Html.Partial("_NavigationPartial", Model)
@Html.Partial("_LeftNavigation", Model)
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Network Tree</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Network</a></li>
                    <li class="active">Network Tree</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">                  
                    <table id="myTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Amount</th>                                
                                <th>Bitcoins Code</th>   
                                <th>Active</th>                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.ListRef){
                                if(item.IsActive){
                                    <tr style="color:red">
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>$@item.Amount</td>
                                        <td>@item.BitCoinsCode</td>                                        
                                        <td><button type="button" class="btn btn-info btn-circle"><i class="fa fa-check"></i> </button></td>                                                           
                                    </tr>  
                                }
                                else
                                {
                                     <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>$@item.Amount</td>
                                        <td>@item.BitCoinsCode</td>
                                        <td><button type="button" class="btn btn-warning btn-circle"><i class="fa fa-times"></i> </button></td>                                                           
                                    </tr>  
                                }
                            }                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

