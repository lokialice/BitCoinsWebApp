@model BitCoinsWebApp.Model.UserProfile
@{
    ViewBag.Title = "FC Group";
    Layout = null;      
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="@Url.Content("~/Content/Images/favicon.png")" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title - A Finance Company</title>
    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/themes/manager/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" />
    <!-- Menu CSS -->
    <link href="@Url.Content("~/Content/themes/manager/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.css")" rel="stylesheet">
    <!-- toast CSS -->
    <link href="@Url.Content("~/Content/themes/manager/plugins/bower_components/toast-master/css/jquery.toast.css")" rel="stylesheet">
    <!-- morris CSS -->
    <link href="@Url.Content("~/Content/themes/manager/plugins/bower_components/morrisjs/morris.css")" rel="stylesheet">
    <!-- animation CSS -->
    <link href="@Url.Content("~/Content/themes/manager/css/animate.css")" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/themes/manager/css/style.css")" rel="stylesheet">
    <!-- color CSS -->
    <link href="@Url.Content("~/Content/themes/manager/css/colors/blue.css")" id="theme" rel="stylesheet">
</head>
<body>   
    <section id="wrapper" class="login-register">
        <div class="login-box">
            <div class="white-box">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "loginform", @class = "form-horizontal form-material" }))
                {
                    <h3 class="box-title m-b-20">Sign In</h3>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(m => Model.UserName, new { @maxlength = 50, @size = "44", @class = "form-control", @placeholder = "User Name" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.PasswordFor(m => Model.Password, new { @maxlength = 50, @size = "44", @class = "form-control", @placeholder = "Password" })
                             <span class="help-block" style="color: #a94442">@ViewBag.Error</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup">Remember me </label>
                            </div>
                            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i>Forgot pwd?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 m-t-10 text-center">
                            <div class="social"><a href="javascript:void(0)" class="btn  btn-facebook" data-toggle="tooltip" title="Login with Facebook"><i aria-hidden="true" class="fa fa-facebook"></i></a><a href="javascript:void(0)" class="btn btn-googleplus" data-toggle="tooltip" title="Login with Google"><i aria-hidden="true" class="fa fa-google-plus"></i></a></div>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-primary m-l-5"><b>Sign Up</b></a></p>
                        </div>
                    </div>
                }
                <form class="form-horizontal" id="recoverform" action="index.html">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- jQuery -->
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/jquery/dist/jquery.min.js")"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/Content/themes/manager/bootstrap/dist/js/bootstrap.min.js")"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js")"></script>
    <!--slimscroll JavaScript -->
    <script src="@Url.Content("~/Content/themes/manager/js/jquery.slimscroll.js")"></script>
    <!--Wave Effects -->
    <script src="@Url.Content("~/Content/themes/manager/js/waves.js")"></script>
    <!--Counter js -->
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/waypoints/lib/jquery.waypoints.js")"></script>
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/counterup/jquery.counterup.min.js")"></script>
    <!--Morris JavaScript -->
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/raphael/raphael-min.js")"></script>
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/morrisjs/morris.js")"></script>
    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/Content/themes/manager/js/custom.js")"></script>
    <script src="@Url.Content("~/Content/themes/manager/js/dashboard1.js")"></script>
    <!-- Sparkline chart JavaScript -->
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/jquery-sparkline/jquery.sparkline.min.js")"></script>
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/jquery-sparkline/jquery.charts-sparkline.js")"></script>
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/toast-master/js/jquery.toast.js")"></script>
    <!--Style Switcher -->
    <script src="@Url.Content("~/Content/themes/manager/plugins/bower_components/styleswitcher/jQuery.style.switcher.js")"></script>
</body>
</html>

